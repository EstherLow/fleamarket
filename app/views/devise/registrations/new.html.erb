
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="ui middle aligned center aligned container">
    <div class="ui grid centered">
    <div class="six wide column">
      <div class="ui large form">
        <div class="ui stacked segment">
          <h2>Sign up</h2>
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="mail outline icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password
                #{@minimum_password_length} characters minimum" %>
              <% end %>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-enter Password" %>
            </div>
          </div>
          <button class="ui button fluid large teal" type="submit">Submit</button>
        </div>

      </div>
      <div class="ui message container">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    </div>
<% end %>
  </div>
</div>
