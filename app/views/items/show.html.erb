
<div class="ui grid container">
  <% @items.each do |item| %>
    <div class="four wide column">
    <div class="ui card">
      <div class="image">
      <%= cl_image_tag(item.photo, :width => 200, :height => 200, :crop => :fill, :gravity => :face) %>
      </div>

      <div class="content">
      <div class="header"><%= item.name %></div>
    <div class="meta">
      <span class="date">$<%= item.price %></span>
      <span class="date"><%= item.condition%></span>
      <span class="date"><%= item.stock %></span>
      <span class="date"><%= item.category %></span>
    </div>

    <div class="description"><%= item.description %></div>
  </div>
  <div class="extra content">
    <%= button_to "Discard", {:controller => 'items', :action => 'destroy', :id => item.id, class: "ui button" }, :method => :delete %>
    <%= link_to "Edit", {:controller => 'items', :action => 'edit', :id => item.id, class: "ui button" } %>
  </div>

</div>
    </div>
  <% end %>
</div>
